{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Tetanus Reported Cases" },
    "projection": {"type":"equalEarth"},
    "width":1000,
    "height":500,
    "background":"lightblue",
    "layer":[
        {
            "data": { "graticule": true },  
            "mark": {
              "type": "geoshape",
              "stroke": "black",      
              "strokeWidth": 0.5       
            }
          },
        {
            "data": {
            "url": "ne_110m.json",
            "format": {"type":"topojson","feature":"ne_110m_admin_0_countries"}
            },
            "mark":{
                "type":"geoshape",
                "fill":"lightgrey",
                "stroke":"black",
                "strokeWidth":1
            },
            "encoding": {
                "tooltip":[
                    {"field":"properties.NAME","type":"nominal","title":"Country"},
                    {"field":"","type":"nominal","title":"No Data"}
                ]
            }
        },
        {
            "data": {
                "url": "ne_110m.json",
                "format": {"type":"topojson","feature":"ne_110m_admin_0_countries"}
            },
            "transform": [

                {
                    "lookup": "properties.NAME",
                    "from":{
                        "data":{
                            "url":"Data/tetnusCasesCleaned.csv"
                        },
                        "key": "Country",
                        "fields": ["2023","year"]
                    }   
                },
                {
                    "lookup": "properties.NAME",
                    "from":{
                        "data":{
                            "url":"Assignment2Data/WorldPopulation2023.csv"
                        },
                        "key": "Country",
                        "fields": ["Population2023"]
                    }   
                },
                {
                    "calculate": "datum['2023'] / datum['Population2023'] * 1000000",
                    "as": "casesPerMillion"
                }
            ],
            "mark":{
                "type": "geoshape",
                "stroke":"black",
                "strokeWidth":1
            },
            "encoding": {
                "color":{
                    "field":"casesPerMillion",
                    "type": "quantitative",
                    "scale":{"type":"linear", "scheme":"greens"},
                    "legend": { "title": "Number of cases" } 
                },
                "tooltip":[
                    {"field":"properties.NAME","type":"nominal","title":"Country"},
                    {"field":"2023","type":"quantitative","title":"Number of Cases"},
                    {"field":"casesPerMillion","type":"quantitative","title":"Cases per million"}
                ]
            }
        }

    ]
}