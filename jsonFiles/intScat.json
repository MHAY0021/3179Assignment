{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width":"container",
    "height": 400,
    "autosize":{
        "type": "fit",
        "contains": "padding"
    },
    "padding": {"left": 10, "right": 10, "top": 10, "bottom": 0},

    "data": {
      "url": "Data/intScat_opinionChart.csv"
      
    },
    "params": [
      {
        "name": "Population_Above",
        "value": 1400000000,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 1400000000,
          "step": 1000000,
          "name": "Filter our larger countries to see detail: "
        }
      },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Population < Population_Above"},
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      }
    ],
    "encoding": {
      "x": {
        "field": "Effectiveness",
        "type": "quantitative",
        "title": "Not Effective (%)",
        "axis": {"tickCount": 7},
        "scale": {"domain": [0, 30]}
      },
      "y": {
        "field": "Importance",
        "type": "quantitative",
        "title": "Not Important (%)",
        "axis": {"tickCount": 6},
        "scale": {"domain": [0, 20]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Entity", "type": "nominal","title":"Country"},
            {"field": "Importance", "type": "quantitative", "format": ",","title":"Don't think it is important"},
            {"field": "Effectiveness", "type": "quantitative", "format": ",","title":"Don't think it is effective"},
            {"field": "Population", "type": "quantitative", "format": ","}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Entity", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Entity'] == 'China' || datum['Entity'] == 'South Africa' || datum['Entity'] == 'Australia' || datum['Entity'] == 'Russia' || datum['Entity'] == 'Bosnia and Herzegovina' ||  datum['Entity'] == 'United States' || datum['Entity'] == 'Brazil'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Entity", "type": "nominal","title":"Country"},
            {"field": "Importance", "type": "quantitative", "format": ",","title":"Don't think it is important"},
            {"field": "Effectiveness", "type": "quantitative", "format": ",","title":"Don't think it is effective"},
            {"field": "Population", "type": "quantitative", "format": ","}
          ]
        }
      }
    ]
  }